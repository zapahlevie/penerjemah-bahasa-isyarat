<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="3" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:gravity="center"
        android:text="Penerjemah Bahasa Isyarat Indonesia"
        android:textColor="#000000"
        android:textSize="18sp" />

        <Button
            android:id="@+id/buttonCat1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="0.18"
            android:text="A Sign" />

        <Button
            android:id="@+id/buttonCat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonCat1"
            android:layout_toLeftOf="@+id/button3"
            android:layout_weight="0.16"
            android:text="B Sign" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonCat2"
            android:layout_below="@+id/buttonCat2"
            android:layout_weight="0.17"
            android:text="V Sign" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button1"
            android:layout_below="@+id/button1"
            android:layout_weight="0.16"
            android:text="W Sign" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonCat2"
            android:layout_toRightOf="@+id/buttonCat1"
            android:layout_weight="0.16"
            android:text="M Sign" />

</LinearLayout>